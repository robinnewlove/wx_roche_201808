<view>
    <!--头部-->
    <view class="header">
        <image class="header-bg"
               src="../../assets/images/jgym-header-bg.jpg"></image>
        <view class="user-head">
            <image class="user-image"
                   src="{{userInfo.avatarUrl}}"></image>
        </view>
        <text class="prompt">您的本次</text>
        <view class="num-info">
            <text class="num-value">{{$params}}</text>
            <text class="num-unit">mmol/L</text>
        </view>
        <text class="conclusion-text">数值正常</text>
        <!--<progress class="progress" stroke-width="3" percent="80" color="#54edf6" active/>-->
        <text class="text">您本月坚持测糖4次，完成进度70%</text>
    </view>
    <!--/头部-->
    <!--日历-->
    <view class="calendar">
        <view class="calendar-title">
            <text class="title-text">{{months}}月完成记录</text>
        </view>
        <view class="calendar-inner">
            <view class="calendar-con"
                  wx:for="{{resultData}}"
                  wx:for-item="item"
                  wx:for-index="index"
                  wx:key="item">
                <view class="calendar-item"
                      wx:for="{{item}}"
                      wx:for-item="day"
                      wx:for-index="i"
                      wx:key="day">
                    <view class="calendar-type"></view>
                    <text class="calendar-text {{ ((index === 0 && i < preDay ) || (index === (resultData.length -1) && i >= (7 - nextDay))) && 'calendar-text-disabled'}}">{{day}}</text>
                </view>
            </view>
        </view>
    </view>
    <!--/日历-->
    <view class="footer">
        <view class="footer-button calendar-title"
              bindtap="handleJump">
            <text class="footer-button-text">返回首页</text>
        </view>
        <view class="footer-button calendar-title"
              data-url="mine_programme_index"
              bindtap="handleJump">
            <text class="footer-button-text">我的测糖方案</text>
        </view>
    </view>
</view>
