            <view class="rule-item-sign"></view>
            <view class="rule-item-sign"></view>
        </view>
    </view>
    <!--/标尺-->
    <!--时间-->
    <view class="time">
        <view class="time-item {{objHidden.TimeStep.value === item && 'time-item-active'}}"
              wx:for="{{arrTimeStep}}"
              wx:for-item="item"
              wx:for-index="key"
              wx:key="key">
            <text class="time-item-text">{{item}}</text>
            <view class="time-item-bar"></view>
            <view class="time-item-type"></view>
        </view>
    </view>
    <!--/时间-->
    <!--表单-->
    <view class="form">
        <block wx:for="{{objInput}}"
               wx:for-index="key"
               wx:for-item="item"
               wx:key="key">
            <view class="input-item"
                  wx:if="{{!item.mode}}">
                <label class="input-label">{{item.label}}</label>
                <view class="input-value">
                    <input
                        type="text"
                        bindinput="bindInput"
                        data-obj="objInput"
                        data-key="{{key}}"
                        value="{{item.value}}"
                        placeholder="{{item.placeholder}}"/>
                </view>
            </view>
            <picker
                wx:if="{{item.mode}}"
                bindchange="bindChange"
                data-obj="objInput"
                data-key="{{key}}"
                mode="{{item.mode}}"
                start="{{item.start}}">
                <view class="input-item">
                    <label class="input-label">{{item.label}}</label>
                    <view class="input-value">
                        <input
                            type="text"
                            disabled
                            value="{{item.value}}"
                            placeholder="{{item.placeholder}}"/>
                    </view>
                </view>
            </picker>
        </block>
        <view class="form-button"
              bindtap="handleSubmit">
            <text class="form-button-text">保存</text>
        </view>
    </view>
    <!--/表单-->
</view>
