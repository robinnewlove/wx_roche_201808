            <view class="rule-item-sign"></view>
            <view class="rule-item-sign"></view>
        </view>
        <view class="rule-item">
            <view class="rule-item-value">
                <text class="rule-item-value-text">0</text>
            </view>
            <view class="rule-item-sign"></view>
            <view class="rule-item-sign"></view>
            <view class="rule-item-sign"></view>
        </view>
        <view class="rule-item">
